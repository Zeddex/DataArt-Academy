@model IndexViewModel

<head>
    <meta charset='utf-8'>
    <style>
        .list {
            max-width: 500px;
            margin: 10px auto;
            padding: 10px 10px;
            background: #f4f7f8;
            border-radius: 8px;
        }
        ul {
            padding-left: 2rem;
            list-style-type: none;
        }
        ul li {
            background-position: 0 0;
            background-size: 1.6rem 1.6rem;
            background-repeat: no-repeat;
        }
        .list a {
            text-decoration: none;
            margin: 0 10px;
            font-size: 14px;
        }
    </style>
</head>

<body>
    <div class="list">
        <ol>
            @foreach (var group in Model.Groups)
            {
                <li>@group.Title (@group.Students.Count())</li>
                @Html.ActionLink("Добавить студента", "Edit", group, null)

                <ul>
                    @foreach (var student in group.Students)
                    {
                        <li>@student.LastName @student.FirstName @student.MiddleName</li>
                        @Html.ActionLink("Редактировать", "Edit", student, null)
                        @Html.ActionLink("Удалить", "Delete", student, null)
                    }
                </ul>
            }
        </ol>
    </div>
</body>